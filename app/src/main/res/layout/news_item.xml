<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBaseBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_news_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/primary_margin"
        android:layout_marginStart="@dimen/primary_margin"
        android:layout_marginBottom="@dimen/primary_margin_half"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/primary_margin"
        android:layout_marginStart="@dimen/primary_margin"
        android:layout_marginBottom="@dimen/primary_margin_half"
        android:id="@+id/news_container"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="新生训练营新生训练营新生训练营新生训练营"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:textSize="14sp"
            android:text="2017-09-21" />

    </LinearLayout>


</LinearLayout>